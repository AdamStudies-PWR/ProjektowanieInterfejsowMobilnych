<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:toolbarStyle">@color/colorAccent</item>
        <item name="android:textColor">@color/buttonText</item>
    </style>

    <style name="GreenBar" parent="Widget.AppCompat.Toolbar">
        <item name="android:backgroundTint">@color/colorAccent</item>
    </style>

    <style name="GreenText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="PinkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/pinkPrimaryDark</item>
        <item name="colorPrimaryDark">@color/pinkAccent</item>
        <item name="colorAccent">@color/pinkAccent</item>
        <item name="android:windowBackground">@color/pinkPrimaryDark</item>
        <item name="android:toolbarStyle">@color/pinkAccent</item>
        <item name="android:textColor">@color/butonPink</item>
    </style>

</resources>
